<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{$DEVICE}</name>
            <config>
                <interface xmlns="http://tail-f.com/ned/cisco-nx">
                    <Vlan>
                        <name>{$VLAN_ID}</name>
                        <ip>
                            <dhcp>
                                <relay>
                                    <address>
                                        <id>{$RELAY_ADDR}</id>
                                    </address>
                                </relay>
                            </dhcp>
                        </ip>
                    </Vlan>
                </interface>
            </config>
        </device>
    </devices>
</config-template>