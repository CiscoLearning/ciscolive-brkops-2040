<config-template xmlns="http://tail-f.com/ns/config/1.0">
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
            <name>{$DEVICE}</name>
            <config>
                <flow xmlns="http://tail-f.com/ned/cisco-nx">
                    <exporter>
                        <name>CL-replicator-v9</name>
                        <destination>
                            <address>{$EXPORTER}</address>
                        </destination>
                        <transport>
                            <udp>9991</udp>
                        </transport>
                        <source>{$EXPORT_INTF}</source>
                        <version>
                            <version>9</version>
                            <option>
                                <interface-table>
                                    <timeout>60</timeout>
                                </interface-table>
                            </option>
                            <template>
                                <data>
                                    <timeout>60</timeout>
                                </data>
                            </template>
                        </version>
                    </exporter>
                    <monitor>
                        <name>CL-ipv4-nb</name>
                        <record>
                            <record-name>CL-ipv4</record-name>
                        </record>
                        <exporter>
                            <name>CL-replicator-v9</name>
                        </exporter>
                    </monitor>
                    <monitor>
                        <name>CL-ipv6-nb</name>
                        <record>
                            <record-name>CL-ipv6</record-name>
                        </record>
                        <exporter>
                            <name>CL-replicator-v9</name>
                        </exporter>
                    </monitor>
                    <record>
                        <name>CL-ipv4</name>
                        <collect>
                            <counter>
                                <bytes/>
                                <packets/>
                            </counter>
                            <timestamp>
                                <sys-uptime>
                                    <first/>
                                    <last/>
                                </sys-uptime>
                            </timestamp>
                            <transport>
                                <tcp>
                                    <flags/>
                                </tcp>
                            </transport>
                        </collect>
                        <match>
                            <ip>
                                <protocol/>
                            </ip>
                            <ipv4>
                                <destination>
                                    <address/>
                                </destination>
                                <source>
                                    <address/>
                                </source>
                            </ipv4>
                            <transport>
                                <destination-port/>
                                <source-port/>
                            </transport>
                        </match>
                    </record>
                    <record>
                        <name>CL-ipv6</name>
                        <collect>
                            <counter>
                                <bytes/>
                                <packets/>
                            </counter>
                            <timestamp>
                                <sys-uptime>
                                    <first/>
                                    <last/>
                                </sys-uptime>
                            </timestamp>
                            <transport>
                                <tcp>
                                    <flags/>
                                </tcp>
                            </transport>
                        </collect>
                        <match>
                            <ip>
                                <protocol/>
                            </ip>
                            <ipv6>
                                <destination>
                                    <address/>
                                </destination>
                                <source>
                                    <address/>
                                </source>
                            </ipv6>
                            <transport>
                                <destination-port/>
                                <source-port/>
                            </transport>
                        </match>
                    </record>
                </flow>
            </config>
        </device>
    </devices>
</config-template>